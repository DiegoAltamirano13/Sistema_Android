<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/btn_ini"
                android:layout_width="57dp"
                android:layout_height="61dp"
                android:drawableBottom="@drawable/calendary" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_inicio">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_ini"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:enabled="false"
                    android:hint="Fecha Inicio"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_fin"
                android:layout_width="57dp"
                android:layout_height="61dp"
                android:drawableBottom="@drawable/calendary"
                android:textColor="@color/md_white_1000" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_fin">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_fin"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:enabled="false"
                    android:hint="Fecha fin"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/btn_buscar"
                android:gravity="center"
                android:text="Buscar"
                android:background="@drawable/efecto_button" />
        </LinearLayout>

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/idReciclerMercancia">

   </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/no_conect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/error_internet"
        android:layout_gravity="center"/>


</LinearLayout>